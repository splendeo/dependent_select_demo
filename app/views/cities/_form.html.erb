<% form_for @city do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :country %><br />
    <%= f.collection_select :country_id, @countries, :id, :name, :include_blank => true %>
  </p>
  
  <p>
    <%= f.label :province %><br />
    <%= f.dependent_collection_select :province_id, @provinces, :id, :name, :country_id, :include_blank => true %>
  </p>
  
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p><%= f.submit "Submit" %></p>
<% end %>
